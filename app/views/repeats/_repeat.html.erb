<% if game.repeated_by?(current_user) %>
  <%= link_to "何度もやりたくなる", game_repeats_path(game), method: :delete, remote: true, class: "tag_button other_color" %>
  <div class="tag_count"><%= @game.repeats.count %></div>
<% else %>
  <%= link_to "何度もやりたくなる", game_repeats_path(game), method: :post, remote: true, class: "tag_button yet_color" %>
  <div class="tag_count"><%= @game.repeats.count %></div>
<% end %>