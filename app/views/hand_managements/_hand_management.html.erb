<% if game.hand_managemented_by?(current_user) %>
  <%= link_to "手札管理", game_hand_managements_path(game), method: :delete, remote: true, class: "tag_button mechanics_color" %>
  <div class="tag_count"><%= @game.hand_managements.count %></div>
<% else %>
  <%= link_to "手札管理", game_hand_managements_path(game), method: :post, remote: true, class: "tag_button yet_color" %>
  <div class="tag_count"><%= @game.hand_managements.count %></div>
<% end %>