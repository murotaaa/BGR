<% if game.only_onced_by?(current_user) %>
  <%= link_to "一度しか出来ない", game_only_onces_path(game), method: :delete, remote: true, class: "tag_button other_color" %>
  <div class="tag_count"><%= @game.only_onces.count %></div>
<% else %>
  <%= link_to "一度しか出来ない", game_only_onces_path(game), method: :post, remote: true, class: "tag_button yet_color" %>
  <div class="tag_count"><%= @game.only_onces.count %></div>
<% end %>