<% if game.for_teened_by?(current_user) %>
  <%= link_to "10代にオススメ", game_for_teens_path(game), method: :delete, remote: true, class: "tag_button target_color" %>
  <div class="tag_count"><%= @game.for_teens.count %></div>
<% else %>
  <%= link_to "10代にオススメ", game_for_teens_path(game), method: :post, remote: true, class: "tag_button yet_color" %>
  <div class="tag_count"><%= @game.for_teens.count %></div>
<% end %>