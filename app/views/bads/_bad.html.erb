<% if game.baded_by?(current_user) %>
  <%= link_to "好きじゃない", game_bads_path(game), method: :delete, remote: true, class: "tag_button evaluate_color" %>
  <div class="tag_count"><%= @game.bads.count %></div>
<% else %>
  <%= link_to "好きじゃない", game_bads_path(game), method: :post, remote: true, class: "tag_button yet_color" %>
  <div class="tag_count"><%= @game.bads.count %></div>
<% end %>
