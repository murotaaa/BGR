<% if game.gooded_by?(current_user) %>
  <%= link_to "好き", game_goods_path(game), method: :delete, remote: true, class: "tag_button evaluate_color" %>
  <div class="tag_count"><%= @game.goods.count %></div>
<% else %>
  <%= link_to "好き", game_goods_path(game), method: :post, remote: true, class: "tag_button yet_color" %>
  <div class="tag_count"><%= @game.goods.count %></div>
<% end %>
