<!DOCTYPE html>
<html>
  <head>
    <title>BGR</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= render "header/login_header" %>
    <% else %>
      <%= render "header/not_login_header" %>
    <% end %><br>
    <%= yield %>
  </body>
</html>
