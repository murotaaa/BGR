<% if game.concealmented_by?(current_user) %>
  <%= link_to "正体隠匿", game_concealments_path(game), method: :delete, remote: true, class: "tag_button mechanics_color" %>
  <div class="tag_count"><%= @game.concealments.count %></div>
<% else %>
  <%= link_to "正体隠匿", game_concealments_path(game), method: :post, remote: true, class: "tag_button yet_color" %>
  <div class="tag_count"><%= @game.concealments.count %></div>
<% end %>