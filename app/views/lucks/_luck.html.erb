<% if game.lucked_by?(current_user) %>
  <%= link_to "運重視", game_lucks_path(game), method: :delete, remote: true, class: "tag_button other_color" %>
  <div class="tag_count"><%= @game.lucks.count %></div>
<% else %>
  <%= link_to "運重視", game_lucks_path(game), method: :post, remote: true, class: "tag_button yet_color" %>
  <div class="tag_count"><%= @game.lucks.count %></div>
<% end %>