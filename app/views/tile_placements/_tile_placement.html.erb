<% if game.tile_placemented_by?(current_user) %>
  <%= link_to "タイル配置", game_tile_placements_path(game), method: :delete, remote: true, class: "tag_button mechanics_color" %>
  <div class="tag_count"><%= @game.tile_placements.count %></div>
<% else %>
  <%= link_to "タイル配置", game_tile_placements_path(game), method: :post, remote: true, class: "tag_button yet_color" %>
  <div class="tag_count"><%= @game.tile_placements.count %></div>
<% end %>