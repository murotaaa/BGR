<% if game.carefullied_by?(current_user) %>
  <%= link_to "じっくり", game_carefullies_path(game), method: :delete, remote: true, class: "tag_button situation_color" %>
  <div class="tag_count"><%= @game.carefullies.count %></div>
<% else %>
  <%= link_to "じっくり", game_carefullies_path(game), method: :post, remote: true, class: "tag_button yet_color" %>
  <div class="tag_count"><%= @game.carefullies.count %></div>
<% end %>