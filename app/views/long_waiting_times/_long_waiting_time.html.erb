<% if game.long_waiting_timed_by?(current_user) %>
  <%= link_to "ダウンタイムが長い", game_long_waiting_times_path(game), method: :delete, remote: true, class: "tag_button other_color" %>
  <div class="tag_count"><%= @game.long_waiting_times.count %></div>
<% else %>
  <%= link_to "ダウンタイムが長い", game_long_waiting_times_path(game), method: :post, remote: true, class: "tag_button yet_color" %>
  <div class="tag_count"><%= @game.long_waiting_times.count %></div>
<% end %>