<% if game.set_collectioned_by?(current_user) %>
  <%= link_to "セットコレクション", game_set_collections_path(game), method: :delete, remote: true, class: "tag_button mechanics_color" %>
  <div class="tag_count"><%= @game.set_collections.count %></div>
<% else %>
  <%= link_to "セットコレクション", game_set_collections_path(game), method: :post, remote: true, class: "tag_button yet_color" %>
  <div class="tag_count"><%= @game.set_collections.count %></div>
<% end %>