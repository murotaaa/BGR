<div class="container myself_container">
  <div class="row">
    <div class="col-lg-12" , style="text-align: center"><%= flash[:notice] %></div>
    <h3 class="title col-lg-12">ログイン</h3>
    <div class="col-lg-6 col-lg-offset-3">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="col-lg-6 col-lg-offset-3 form-group">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
        <div class="col-lg-6 col-lg-offset-3 form-group">
          <%= f.label :password, "パスワード" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="col-lg-6 col-lg-offset-3 form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="col-lg-6 col-lg-offset-3 sessions_registrations_submit">
          <%= f.submit "ログイン", class: "btn col-lg-12", style: "background: #8B0000" %>
        </div>
      <% end %>
    </div>
  </div>
</div>