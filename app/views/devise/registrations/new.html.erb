<div class="container myself_container">
  <div class="row">
    <h3 class="title col-lg-12">新規会員登録</h3>
    <div class="col-lg-6 col-lg-offset-3">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
          <div class="col-lg-6 col-lg-offset-3 form-group">
            <%= f.label :email, "メールアドレス" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="col-lg-6 col-lg-offset-3 form-group">
            <%= f.label :password, "パスワード" %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            <span id="helpblock" class="help-block">パスワードは半角英数字<br><%= @minimum_password_length %>文字以上で入力して下さい。</span>
          </div>

          <div class="col-lg-6 col-lg-offset-3 form-group">
            <%= f.label :password_confirmation, "再入力パスワード" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="col-lg-6 col-lg-offset-3 sessions_registrations_submit">
            <%= f.submit "登録", class: "btn col-lg-12", style: "background: #8B0000" %>
          </div>
      <% end %>
    </div>
  </div>
</div>
