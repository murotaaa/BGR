<% if game.for_beginnered_by?(current_user) %>
  <%= link_to "初心者にオススメ", game_for_beginners_path(game), method: :delete, remote: true, class: "tag_button target_color" %>
  <div class="tag_count"><%= @game.for_beginners.count %></div>
<% else %>
  <%= link_to "初心者にオススメ", game_for_beginners_path(game), method: :post, remote: true, class: "tag_button yet_color" %>
  <div class="tag_count"><%= @game.for_beginners.count %></div>
<% end %>